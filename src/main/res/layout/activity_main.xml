<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#e0e0e0"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearMain"
        android:layout_width="365dp"
        android:layout_height="496dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:weightSum="1"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="7dp">







        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.09">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <GridLayout

                    >

                    <Button
                        android:id="@+id/hizli_arama"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="#83D4DF"
                        android:drawableLeft="@drawable/ic_action_arama"
                        android:text="hızlı ara"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="30dp"
                        android:textStyle="bold" />

                <Button
                    android:id="@+id/satis"
                    android:layout_width="150dp"
                    android:layout_height="150dp"

                    android:background="#83D4DF"
                    android:drawableLeft="@drawable/ic_action_satis"
                    android:text="satış"
                    android:textStyle="bold" />
                </GridLayout>

            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

<GridLayout>
                <Button
                    android:id="@+id/urun"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="#83D4DF"
                    android:drawableLeft="@drawable/ic_action_urun"
                    android:text="ürün"
                    android:textStyle="bold"
 />

            <Button
                android:id="@+id/islemler"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="#83D4DF"
                android:text="işlemler"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_action_islemler"
                />
</GridLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

<GridLayout>
            <Button
                android:id="@+id/notlar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="#83D4DF"
                android:text="Notlar"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_action_not"/>

            <Button
                android:id="@+id/cikis"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="30dp"
                android:background="#83D4DF"
                android:text="Çıkış"
                android:textStyle="bold" />
</GridLayout>
            </TableRow>

        </TableLayout>
        <TextView
            android:id="@+id/tarih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.32" />

    </LinearLayout>

</RelativeLayout>
